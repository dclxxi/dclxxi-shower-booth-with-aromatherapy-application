<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2980B9"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="157dp"
            android:layout_height="143dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/logo"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="지능형 샤워기"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/drawable_left_image_id"
            android:drawableTint="#A6A6A6"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="아이디를 입력하세요"
            android:inputType="textPersonName"
            android:minWidth="250dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#5E5E5E" />

        <EditText
            android:id="@+id/ed_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/drawable_left_image_pw"
            android:drawableTint="#A6A6A6"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="비밀번호를 입력하세요"
            android:inputType="textPassword"
            android:minWidth="250dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#5E5E5E" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:minWidth="250dp"
            android:text="로그인"
            android:textColor="#000000"
            android:textSize="16sp"
            app:backgroundTint="#F1C40F" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_google_login"
            android:layout_width="260dp"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:minWidth="250dp"
            android:text="회원가입"
            android:textSize="16sp"
            app:backgroundTint="#5E5E5E" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>