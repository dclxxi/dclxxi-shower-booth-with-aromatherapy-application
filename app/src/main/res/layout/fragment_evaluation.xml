<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:orientation="horizontal"
    tools:context=".EvaluationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="50dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="30dp">

        <ImageView
            android:id="@+id/img_logo2"
            android:layout_width="155dp"
            android:layout_height="143dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/tv_evaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="오늘의 샤워 만족도를\n평가해주세요!"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="만족도 데이터를 기반으로\n더 좋은 추천 기능을 만들 수 있습니다."
            android:textColor="#747474"
            android:textSize="16sp" />


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:isIndicator="false"
            android:max="5"
            android:numStars="5"
            android:progressBackgroundTint="#E0E0E0"
            android:progressTint="#00BCD4"
            android:stepSize="1"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btn_save_showerlog"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryText"
            android:text="평가 완료" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="평가 완료 버튼을 눌러야\n오늘의 샤워 기록이 저장됩니다."
            android:textColor="#3F51B5"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>