<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PurchaseRecommendation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="아로마 오일 구매 추천"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/purchase_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="테스트aa"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님과 비슷한 사람들이"
                android:textColor="#878787"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아한 아로마 오일이에요!"
                android:textColor="#878787"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/aroma_img1"
                    android:layout_width="164dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sandaiwood" />

                <LinearLayout
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp">

                        <TextView
                            android:id="@+id/aroma_ko_name1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="샌달우드"
                            android:textColor="@color/black"
                            android:textSize="24dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/aroma_en_name1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Sandaiwood"
                            android:textColor="#7E7E7E"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/aroma_note1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="베이스노트"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  #"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/aroma_scent1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="따뜻"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  #"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/aroma_mood1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HAPPY"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/aroma_img2"
                    android:layout_width="164dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rosemary" />

                <LinearLayout
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp">

                        <TextView
                            android:id="@+id/aroma_ko_name2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="로즈마리"
                            android:textColor="@color/black"
                            android:textSize="24dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/aroma_en_name2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Rosemary"
                            android:textColor="#7E7E7E"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/aroma_note2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미들노트"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  #"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/aroma_scent2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="깨끗"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  #"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/aroma_mood2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAD"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/aroma_img3"
                    android:layout_width="164dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/benzoin" />

                <LinearLayout
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp">

                        <TextView
                            android:id="@+id/aroma_ko_name3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="안식향"
                            android:textColor="@color/black"
                            android:textSize="24dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/aroma_en_name3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Benzoin"
                            android:textColor="#7E7E7E"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="1dp"
                        tools:layout_editor_absoluteY="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/aroma_note3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="베이스노트"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  #"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/aroma_scent3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="달콤"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  #"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/aroma_mood3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ANGRY"
                            android:textColor="#2196F3"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>