<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    tools:context=".SelectionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="30dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="아로마향 선택"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="원하는 아로마오일을 직접 선택합니다."
            android:textColor="#000000"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/img_oil"
            android:layout_width="113dp"
            android:layout_height="109dp"
            android:layout_margin="30dp"
            app:srcCompat="@drawable/oil" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">



                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#616161"
                    android:text="샌달우드"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#616161"
                    android:text="로즈마리"
                    android:textColor="#000000" />


                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#616161"
                    android:text="라벤더"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/rb4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#616161"
                    android:text="시트로넬라"
                    android:textColor="#000000" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_selection_save"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="사용하기"
            app:backgroundTint="#2980B9" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>